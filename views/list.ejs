<html lang="en">
    <link rel="stylesheet" href="/styles.css" />
    <body>
        <div >
            <h2>All Users</h2>
            <% if (user.length > 0) { %>
            <table>
                <thead>
                    <tr>
                      <th>_id</th>
                      <th>email</th>
                      <th>firstname</th>
                      <th>lastname</th>
                      <th>phone</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                <tbody>
              <% user.forEach(user => { %>  
                <tr>
                    <td><a href="/user/<%= user._id %>"> <%= user._id %></a> </td>
                    <td><%= user.email %> </td>
                    <td><%= user.firstName %> </td>
                    <td><%= user.lastName %></td>
                    <td><%= user.phone %></td>
                    <td>
                        <a href="/user/edit/<%= user._id %>">Edit</a> <!-- Added Edit link -->
                    </td>
                    <td>
                        <form action="/user/delete/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
              <% }) %>
                </tr>
            </tbody>
            </table>
            <% } else { %>
              <p>There are no user to display...</p>
            <% } %>
          </div>
          <div>
              <button onclick="window.location.href='/'">Back to Home</button>
          </div>
    </body>
</html>